@model List<BookHire>
@if(TempData["basarili"] != null)
{
	<h4 class="text-danger">@TempData["basarili"]</h4>
}

<div class="container">
	<div class="row pt-3 pb-4">
		<div>
			<h1>Kitap Kiralama</h1>
		</div>
	</div>

	<table class="table table-bordered">
		<thead>
			<tr>
				<th>Id</th>
				<th>Öğrenci Id</th>
				<th>Kitap Id</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var bookHire in Model)
			{
				<tr>
					<td>@bookHire.Id</td>
					<td>@bookHire.StudentId</td>
					<td>@bookHire.Book.BookName</td>
					<td style="width:200px;">
						<a asp-controller="BookHire" asp-action="AddOrEdit" asp-route-id="@bookHire.Id" type="button" class="btn btn-warning" style="width:200px;">
							Güncelle
						</a>
					</td>
					<td style="width:200px;">
						<a asp-controller="BookHire" asp-action="Delete" asp-route-id="@bookHire.Id" type="button" class="btn btn-danger" style="width:200px;">
							Sil
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div class="row pt-3 pb-2">
		<div>
			<a asp-controller="BookHire" asp-action="AddOrEdit" class="btn btn-lg btn-primary" type="button">
				Yeni Kiralama
			</a>
		</div>
	</div>
</div>

