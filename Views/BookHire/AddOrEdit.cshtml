@model BookHire

<form method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-5">
				<div class="row pb-3">
					<h2 class="text-primary">@(Model == null ? "Yeni Kiralama İşlemi" : "Kiralama İşlemini Güncelle")</h2>
					<hr />
				</div>
				<div class="mb-3">
					<label asp-for="BookId"></label>
					<select asp-for="BookId" asp-items="ViewBag.bookList" class="form-select"></select>
				</div>
				<div class="mb-3">
					<label asp-for="StudentId"></label>
					<input asp-for="StudentId" id="input1" class="form-control" />
					<span asp-validation-for="StudentId" class="text-danger"></span>
				</div>
				@if (Model == null)
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Yeni Kiralama</button>
				}
				else
				{
					<button type="submit" class="btn btn-lg btn-primary" style="width:250px">Güncelle</button>
				}
				<a asp-controller="BookHire" asp-action="Index" class="btn btn-lg btn-primary">
					Kiralamaya Geri Dön
				</a>
			</div>
		</div>
		<div class="col-2 mt-5">
			@if (Model != null)
			{
				<img src="@Model.Book.ImageUrl" width="100%" style="border: 1px solid #bbb9b9; border-radius: 7px" />
			}
		</div>
	</div>
</form>

